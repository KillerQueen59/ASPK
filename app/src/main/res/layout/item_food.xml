<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:background="@drawable/bg_stroke_round">

        <TextView
            android:id="@+id/titleFood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Choco Chip Cookies"
            android:textColor="@color/green_100"
            android:fontFamily="@font/nunito_bold"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/imageFood"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredientFood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Chocolate, brown sugar, choco chips"
            android:textColor="@color/green_100"
            android:fontFamily="@font/nunito_light"
            app:layout_constraintEnd_toStartOf="@+id/imageFood"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleFood" />

        <TextView
            android:id="@+id/priceFood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Rp 14.000 ,-"
            android:textColor="@color/green_100"
            android:fontFamily="@font/nunito_bold"
            app:layout_constraintEnd_toStartOf="@+id/imageFood"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ingredientFood" />

        <ImageView
            android:id="@+id/imageFood"
            android:layout_width="75dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/addFood"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_stroke_round"
            android:text="Add"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:paddingVertical="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageFood"
            app:layout_constraintStart_toStartOf="@+id/imageFood"
            app:layout_constraintTop_toBottomOf="@+id/imageFood" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>