<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_100">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_home"
        android:layout_gravity="bottom"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Menu"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPromo"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round"
            app:backgroundTint="@color/white"
            android:text="Promo"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginVertical="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRekomendasi"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round"
            app:backgroundTint="@color/white"
            android:text="Rekomendasi Produk"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginVertical="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPromo" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMakanan"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round"
            app:backgroundTint="@color/white"
            android:text="Makanan"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginVertical="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRekomendasi" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinuman"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="44dp"
            android:background="@drawable/bg_round"
            android:fontFamily="@font/nunito_regular"
            android:text="Minuman"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMakanan"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>